@model FA.JustBlog.Core.Models.Entities.Category

@section Styles {
    <link href="@Url.Content("~/lib/adminlte.min.css")" rel="stylesheet"/>
}

@{
    ViewBag.Title = "Edit Category";
    Layout = "_Layout";
}

<!-- Content Wrapper. Contains page content -->
<div class="ms-2">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6 ps-0">
                    <h1>Edit Category</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a asp-area="Admin" asp-controller="Category" asp-action="Index">Categories</a>
                        </li>
                        <li class="breadcrumb-item active">Edit</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Form</h3>
                        </div>
                        <!-- form start -->
                        <form asp-action="Edit" method="post">
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="Name">Name <span class="text-danger">*</span></label>
                                    <input asp-for="Name" type="text" class="form-control" placeholder="Enter Name"/>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UrlSlug">Url Slug <span class="text-danger">*</span></label>
                                    <input asp-for="UrlSlug" type="text" class="form-control" placeholder="Url Slug"/>
                                    <span asp-validation-for="UrlSlug" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description">Description <span class="text-danger">*</span></label>
                                    <input asp-for="Description" type="text" class="form-control" placeholder="Description"/>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="card-footer d-flex justify-content-end">
                                    <button class="btn btn-danger me-auto" asp-area="Admin" asp-controller="Category" asp-action="Index">Cancel</button>
                                    <input type="submit" class="btn btn-primary" value="Submit" onclick="return confirm('Are you sure?')"/>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/lib/multiselect-dropdown.js"></script>
}